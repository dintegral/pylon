{
  "name": "pylon",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "18.15.0",
    "pnpm": "7.x"
  },
  "browserslist": [
    "chrome 100"
  ],
  "license": "AGPL-3.0-or-later",
  "main": "dist/main/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:serve": "ng serve --configuration development",
    "build": "npm run electron:build-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- --configuration development",
    "build:prod": "npm run build -- --configuration production",
    "electron:build-tsc": "tsc -p src/main/tsconfig.app.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:build-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:build": "npm run build:prod && electron-builder build --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && playwright test -c src/e2e/playwright.config.ts src/e2e/",
    "e2e:show-trace": "playwright show-trace dist/e2e/trace.zip",
    "lint": "ng lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@dfinity/candid": "0.15.4",
    "@dfinity/principal": "0.15.4",
    "@dfinity/agent": "0.15.4",
    "@dfinity/response-verification": "0.1.0",
    "cheerio": "1.0.0-rc.12",
    "node-fetch": "3.3.1",
    "pako": "2.1.0"
  },
  "devDependencies": {
    "@angular/cdk": "15.2.4",
    "bootstrap-icons": "1.10.3",
    "@angular-builders/custom-webpack": "15.0.0",
    "@angular-devkit/build-angular": "15.2.4",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@angular/cli": "15.2.4",
    "@angular/common": "15.2.4",
    "@angular/compiler": "15.2.4",
    "@angular/compiler-cli": "15.2.4",
    "@angular/core": "15.2.4",
    "@angular/forms": "15.2.4",
    "@angular/language-service": "15.2.4",
    "@angular/platform-browser": "15.2.4",
    "@angular/platform-browser-dynamic": "15.2.4",
    "@angular/router": "15.2.4",
    "@playwright/test": "1.32.1",
    "@popperjs/core": "2.11.7",
    "@types/jasmine": "4.3.1",
    "@types/jasminewd2": "2.0.10",
    "@types/node": "18.15.10",
    "@types/node-fetch": "2.6.2",
    "@types/pako": "2.0.0",
    "@types/webpack": "5.28.0",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.56.0",
    "bootstrap": "5.3.0-alpha1",
    "conventional-changelog-cli": "2.2.2",
    "electron": "23.2.0",
    "electron-builder": "23.6.0",
    "electron-packager": "17.1.1",
    "eslint": "8.36.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "40.1.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "jasmine-core": "4.6.0",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.4.1",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "7.3.0",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.0.0",
    "node-polyfill-webpack-plugin": "2.0.1",
    "npm-run-all": "4.1.5",
    "playwright": "1.32.1",
    "prettier": "2.8.7",
    "rxjs": "7.8.0",
    "ts-node": "10.9.1",
    "tslib": "2.5.0",
    "typescript": "4.8.2",
    "wait-on": "6.0.1",
    "webdriver-manager": "12.1.9",
    "webpack": "5.76.3",
    "zone.js": "0.12.0"
  }
}
